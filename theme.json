{
  "name": "handheld-controller-glyphs",
  "display_name": "Handheld Controller Glyphs",
  "author": "victor-borges",
  "description": "Change the controller glyphs to match the handheld.",
  "version": "v1.0.0",
  "target": "System-Wide",
  "manifest_version": 9,
  "inject": {
    "themes/hhd.css": ["QuickAccess"]
  },
  "tabs": {
    "all": ["bigpicture", "QuickAccess", "MainMenu"]
  },
  "patches": {
    "Handheld": {
      "type": "dropdown",
      "default": "Xbox",
      "values": {
        "Xbox": {
          "themes/xbox.css": ["all"]
        },
        "AYANEO": {
          "themes/ayaneo.css": ["all"],
          "themes/shared/dpad.css": ["all"],
          "themes/shared/sticks.css": ["all"],
          "themes/shared/face-buttons.css": ["all"],
          "themes/shared/shoulder-buttons.css": ["all"],
          "themes/shared/hide-trackpads.css": ["all"],
          "themes/shared/hide-back-buttons.css": ["all"]
        },
        "GPD Win 3": {
          "themes/gpd-win-3.css": ["all"],
          "themes/shared/dpad-ps.css": ["all"],
          "themes/shared/sticks.css": ["all"],
          "themes/shared/face-buttons.css": ["all"],
          "themes/shared/shoulder-buttons.css": ["all"],
          "themes/shared/hide-back-buttons.css": ["all"],
          "themes/shared/hide-gyro.css": ["all"]
        },
        "GPD Win 4": {
          "themes/gpd-win-4.css": ["all"],
          "themes/shared/dpad-ps.css": ["all"],
          "themes/shared/sticks.css": ["all"],
          "themes/shared/face-buttons.css": ["all"],
          "themes/shared/shoulder-buttons.css": ["all"],
          "themes/shared/hide-back-buttons.css": ["all"]
        },
        "GPD Win Mini": {
          "themes/gpd-win-mini.css": ["all"],
          "themes/shared/dpad-ps.css": ["all"],
          "themes/shared/sticks.css": ["all"],
          "themes/shared/face-buttons.css": ["all"],
          "themes/shared/shoulder-buttons.css": ["all"],
          "themes/shared/hide-back-buttons.css": ["all"]
        },
        "ONEXPLAYER": {
          "themes/onexplayer.css": ["all"],
          "themes/shared/dpad.css": ["all"],
          "themes/shared/sticks.css": ["all"],
          "themes/shared/face-buttons.css": ["all"],
          "themes/shared/shoulder-buttons.css": ["all"],
          "themes/shared/hide-back-buttons.css": ["all"],
          "themes/shared/hide-trackpads.css": ["all"]
        },
        "ONEXFLY": {
          "themes/onexfly.css": ["all"],
          "themes/shared/dpad.css": ["all"],
          "themes/shared/sticks.css": ["all"],
          "themes/shared/face-buttons.css": ["all"],
          "themes/shared/shoulder-buttons.css": ["all"],
          "themes/shared/hide-back-buttons.css": ["all"],
          "themes/shared/hide-trackpads.css": ["all"]
        },
        "ROG Ally / Ally X": {
          "themes/rog-ally.css": ["all"],
          "themes/shared/dpad.css": ["all"],
          "themes/shared/sticks.css": ["all"],
          "themes/shared/shoulder-buttons.css": ["all"],
          "themes/shared/hide-trackpads.css": ["all"],
          "themes/shared/hide-back-buttons.css": ["all"]
        },
        "Legion Go": {
          "themes/legion-go.css": ["all"],
          "themes/shared/dpad.css": ["all"],
          "themes/shared/sticks.css": ["all"],
          "themes/shared/face-buttons.css": ["all"],
          "themes/shared/shoulder-buttons.css": ["all"]
        },
        "MSI Claw": {
          "themes/msi-claw.css": ["all"],
          "themes/shared/dpad.css": ["all"],
          "themes/shared/sticks.css": ["all"],
          "themes/shared/face-buttons.css": ["all"],
          "themes/shared/shoulder-buttons.css": ["all"],
          "themes/shared/hide-back-buttons.css": ["all"],
          "themes/shared/hide-trackpads.css": ["all"]
        }
      }
    },
    "Swap View/Menu with Guide/QAM": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "No": {},
        "Yes": {
          "themes/variables/swap-view-menu-guide-qam.css": ["all"]
        }
      }
    }
  }
}
